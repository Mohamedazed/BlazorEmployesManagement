@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row mt-5 border shadow rounded-5" style="height: 55vh;">
    <div class="col-md-4 bg-light w-50">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center my-5" >Create a new account.</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-3 mt-5 mx-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating  mx-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-3  mx-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <p class="ms-3">
               <span class="text-secondary">Already have an account ?</span>
               <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><b class="text-dark">Login</b></a>
            </p>
            <button id="registerSubmit" type="submit" class="w-100 mt-5 btn-dark text-white btn btn-lg shadow-sm">Register</button>
        </form>
    </div>
    <div class="col-md-6 bg-light col-md-offset-2 w-50 d-flex justify-content-center align-items-center">
       <img src="/image1-1.png" alt="Picture" class="img-fluid" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
